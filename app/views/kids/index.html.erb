<div class="row">
     <div class="col-md-12">

<table class="table table-striped table-bordered">
  <tr>
    <th class='center'>Photo</th>
    <th class='center'>First Name</th>
    <th class='center'>Last Name</th>
    <th class='center'>DOB</th>
    <!--<th class='center'>User</th>-->
    <th class='center'>Action</th>
  </tr>

<% @kids.each do |kid| %>
  <tr>
    <td class='center'><%= link_to image_tag(kid.image.url(:thumb)), kid %></td>
    <td class='center'><%= kid.first_name %></td>
    <td class='center'><%= kid.last_name %></td>
    <td class='center'><%= kid.dob %></td>
    <!--<td class='center'><%#= kid.user_id %></td>-->
    <td class='center'>
      <!-- Single button -->
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          Action <span class="caret"></span>
       </button>
       <ul class="dropdown-menu" role="menu">
         <!--<li><%#= link_to 'View', kid, class: "btn btn-link" %></li>-->
         <li><%= link_to 'Edit', edit_kid_path(kid), class: "btn btn-link" %></li>
         <li><%= link_to 'Delete', kid, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
       </ul>
      </div>
      
      
      
    </td>
  </tr>
<% end %>
</table>
</div>
</div>


<% if user_signed_in? %>
  <%= link_to 'Add Kid', new_kid_path, class: "btn btn-lg btn-primary" %>
<% end %>