<h2>Sign up</h2>
<% if params[:vendor] == "1" %>
  <% resource.role = "vendor" %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="alert alert-info" role="alert">
      <p>We're so glad your signing-up to share your activities for kids on splickity! After you sign-up, your business will need to be verified and approved by us before your account is activated. Please plan for up to a 24 hour turn-around on this process - we're a small business too afterall!</p>
    </div>

    <div class="form-group">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :ein %>
      <%= f.text_field :ein, class: "form-control" %>
    </div> 

    <div class="form-group">
      <%= f.label :website %>
      <%= f.url_field :website, class: "form-control" %>
    </div>    

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    
    <% if params[:vendor] == "1" %>
      <%= f.hidden_field :role %>
    <% end %>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <% resource.role = "registered" %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    
    <% if params[:vendor] == "1" %>
      <%= f.hidden_field :role %>
    <% end %>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>


