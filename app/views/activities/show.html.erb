<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @activity.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @activity.name %></h3>
	<p>Start date: <%= @activity.start_date.strftime("%m/%d/%Y") %></p>
	<p>End date: <%= @activity.end_date.strftime("%m/%d/%Y") %></p>
    <p><%= number_to_currency(@activity.price) %></p>
    <p><%= @activity.description %></p>
  </div>
</div>

<% if current_user == @activity.user %>
  <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', activities_path, class: "btn btn-link" %>

