<script type="text/javascript">
    $(document).ready(function() { 
        $('#startsat').moment().format("MMMM Do YYYY, h:mm A");
    });
</script>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @activity.image.url %>
    </div>
    <p><strong>Description: </strong><%= @activity.description %></p>
    <p><strong>Category: </strong><%= @activity.category %></p>
    <p><strong>Price: </strong><%= number_to_currency(@activity.price) %></p>
    <br>
  </div>
  <div class="col-md-6">
    <h3><%= @activity.name %></h3>
	  <p><strong>Begins: </strong><%= @activity.from_date.strftime("%B %d %Y") %><%= @activity.from_time.strftime(", %l:%M %p") %> <%= @activity.time_zone %></p>
	  <p><strong>Ends: </strong><%= @activity.to_date.strftime("%B %d %Y") %><%= @activity.to_time.strftime(", %l:%M %p") %> <%= @activity.time_zone %></p>   
    <% if @activity.repeats == 'weekly' %>
      <!-- <p><strong>Repeats: </strong><%= @activity.repeats_weekly_each_days_of_the_week_mask %></p> -->
    <% end %>
    <br>

    <div class="center">
      <%= link_to 'Add to Cart', add_to_cart_carts_path(:activity_id=>@activity.id), class: 'btn btn-primary', data: { no_turbolink: true } %>	
      <%#= link_to 'Register', new_activity_order_path(@activity), class: 'btn btn-primary', data: { no_turbolink: true } %>
    </div>
  </div>
</div>

<% if current_user == @activity.user %>
  <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-primary" %> |
<% end %>
<%= link_to 'Back', activities_path, class: "btn btn-info" %>

