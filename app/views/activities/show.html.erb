<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @activity.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @activity.name %></h3>
    <p><strong>Category: </strong><%= @activity.category %></p>
	  <p><strong>Start date: </strong><%= @activity.start_date.strftime("%m/%d/%Y") %></p>
	  <p><strong>End date: </strong><%= @activity.end_date.strftime("%m/%d/%Y") %></p>
    <p><%= number_to_currency(@activity.price) %></p>
    <p><%= @activity.description %></p>
    <br>

    <div class="center">
      <%= link_to 'Register', new_activity_order_path(@activity), class: 'btn btn-primary', data: { no_turbolink: true } %>
    </div>
  </div>
</div>

<% if current_user == @activity.user %>
  <%= link_to 'Edit', edit_activity_path(@activity), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', activities_path, class: "btn btn-link" %>

