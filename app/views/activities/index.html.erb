<div class="jumbotron">
  <div class="row">
    <div class="col-md-6 col-md-push-6">
      <h1>Activities for kids</h1>
      <br>
      <form>
        <div class="form-group form-group-lg">
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Search by city">
        </div>
        <p>Or</p>
        <div class="form-group form-group-lg">
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Search by zip code">
        </div>
        <button type="submit" class="btn btn-success">Search</button>
      </form>
	</div>
  </div>
</div>



<div class="center">
	<div class="row">
	  <% @activities.each do |activity| %>
		<div class="col-md-3">
		  <div class="thumbnail">
		    <%= link_to image_tag(activity.image.url(:medium)), activity %>
			<div class="caption">
			  <h3><%= activity.name %></h3>
			  <p><%= number_to_currency(activity.price) %></p>
			  <p><%= "Sold by #{activity.user.full_name}" %></p> 
			</div>
		  </div>
		</div>
	  <% end %>
	</div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Activity', new_activity_path, class: "btn btn-link" %>
<% end %>
