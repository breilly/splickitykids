<div class="center">
	<div class="row">
	  <% @activities.each do |activity| %>
		<div class="col-md-3">
		  <div class="thumbnail">
		    <%= link_to image_tag(activity.image.url(:medium)), activity %>
			<div class="caption">
			  <h3><%= activity.name %></h3>
			  <p><%= number_to_currency(activity.price) %></p>
			  <p><%= "Sold by #{activity.user.full_name}" %></p>
			  <% if (user_signed_in?) && (current_user == activity.user) %>
			    <%= link_to 'Edit', edit_activity_path(activity), class: "btn btn-link" %>
			    <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
			  <% end %>  
			</div>
		  </div>
		</div>
	  <% end %>
	</div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Activity', new_activity_path, class: "btn btn-link" %>
<% end %>