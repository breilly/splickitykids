<div class="center">
  <h2>Your sales history</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class='center'>Image</th>
    <th class='center'>Activity</th>
    <th class='center'>Family Member</th>
    <th class='center'>Amount to Vendor</th>
    <th class='center'>Price</th>
    <th class='center'>Customer</th>
    <th class='center'>Date Sold</th>
  </tr>

  <% @order_details.each do |order_detail| %>
    <tr>
      <% payment = Payment.where(:order_detail_id => order_detail.id).first %>
      <td class='center'><%= image_tag order_detail.activity.image.url(:thumb) %></td>
      <td class='center'><%= order_detail.activity.name %></td>
      <td class='center'><%= order_detail.kid.first_name %></td>
      <td class='center'><%= number_to_currency(payment.seller_amount) %></td>
      <td class='center'><%= number_to_currency(order_detail.activity.price) %></td>
      <td class='center'><%= order_detail.order.buyer.full_name %></td>
      <td class='center'><%= order_detail.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>
