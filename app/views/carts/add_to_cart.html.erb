<h1>Add To Cart</h1>

<div class="row">
<p>
	<strong>Activity name:</strong>
	<%= @activity.name %>
</p>


	<%= form_tag add_carts_path do %>
		<div class="form-group form-group-lg">
			<strong>Kids:</strong>
			<%= select_tag "kid_ids", options_from_collection_for_select(Kid.where(:user_id=>current_user.id), 'id', 'first_name',@temp_order.kids.map{ |j| j.id }), :multiple => true, class: "form-control" %>
		</div>
</div>
<hr>
<div class="row">
	<%= hidden_field_tag "activity_id", params[:activity_id] %>
	<div class="actions">
		<%= submit_tag "Add", class: "btn btn-lg btn-primary"%>
	</div>
</div>

<% end %>
