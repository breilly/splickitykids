<h3>Cart</h3>
<% 
p "11111111111"
p @carts
if @carts.count > 0 %>
  <div class="row">
	<div class="col-md-12">

		<table class="table table-striped table-bordered">
			<tr>
				<th class='center'>Activity Name</th>
				<th class='center'>Kids</th>
				<th class='center'>Price</th>
				<th class='center'>Action</th>
			</tr>
			<% @carts.each do |cart| %>
				<tr>
					<td class='center'><%#= cart.activity.name %></td>
					<td class='center'><%#= cart.kid.name %></td>
					<td class='center'>$<%#= cart.activity.price %> USD</td>
					<td class='center'>
						 <div class="btn-group">
        					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          						Action <span class="caret"></span>
       						</button>
							<ul class="dropdown-menu" role="menu">
								<li><%= link_to 'Remove', cart_path(cart.id), :method=>:delete %></li>
							</ul>
						</div>	
					</td>	
				</tr>
			<% end %>	
		</table>
		</div>
	</div>
	<div>
		<%= link_to 'Place Order', place_order_carts_path, class: 'btn btn-primary' %>
		<%= link_to 'Add More Activity',activities_path, class: 'btn btn-primary' %>
	</div>

<% else %>
<h2>Your cart is empty!</h2>
<% end %>
