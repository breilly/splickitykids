<h3>Cart</h3>
<% if @cart.temp_orders.count > 0 %>
  <div class="row">
	<div class="col-md-12">

		<table class="table table-striped table-bordered">
			<tr>
				<th class='center'>Activity Name</th>
				<th class='center'>Kids</th>
				<th class='center'>Action</th>
			</tr>
			<% @cart.temp_orders.each do |c| %>
				<tr>
					<td class='center'><%= Activity.find(c.activity_id).name %></td>
					<td class='center'><%= c.kids.pluck(:first_name).join(', ') %></td>
					<td class='center'>
						 <div class="btn-group">
        					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          						Action <span class="caret"></span>
       						</button>
							<ul class="dropdown-menu" role="menu">
								<li><%= link_to 'Edit', edit_cart_path(@cart, :temp_order_id=>c.id) %></li>
								<li><%= link_to 'Remove', cart_path(:temp_order_id=>c.id), :method=>:delete %></li>
							</ul>
						</div>	
					</td>	
				</tr>
			<% end %>	
		</table>
		</div>
	</div>
	<div>
		<%= link_to 'Place Order', place_order_carts_path(:cart_id=>@cart.id), class: 'btn btn-primary' %>
		<%= link_to 'Add More Activity',activities_path, class: 'btn btn-primary' %>
	</div>

<% else %>
<h2>Your cart is empty!</h2>
<% end %>
