<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group form-group-lg col-xs-12">
    <div class="form-group col-xs-12">
      <h2>Edit <%= current_vendor.company_name %></h2>
    </div>
    <div class="form-group col-xs-12">
      <h3>Company info</h3>
    </div>

    <div class="form-group  col-xs-6">
      <%= f.input :company_name, required: true, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group col-xs-6">
      <%= f.input :ein, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-xs-12">
      <hr>
      <h3>Primary contact</h3>
    </div>

    <div class="form-group col-xs-6">
      <%= f.input :first_name, required: true %>
    </div>

    <div class="form-group col-xs-6">
      <%= f.input :last_name, required: true %>
    </div>

    <div class="form-group col-xs-12">
      <%= f.input :email, required: true %>
    </div>

    <div class="form-group col-xs-6">
      <%= label_tag :ssn, "SSN" %>
      <%= text_field_tag :ssn, nil, { :name => nil, :'data-stripe' => "ssn", class: "form-control" } %>
    </div>

    <div class="form-group col-xs-2">
      <%= label_tag :dob_month, "Date of birth - Month" %>
      <%= text_field_tag :dob_month, nil, { :name => nil, :'data-stripe' => "dob_month", class: "form-control", placeholder: 'Month' } %>
    </div>

    <div class="form-group col-xs-2">
      <%= label_tag :dob_day, "Day" %>
      <%= text_field_tag :dob_day, nil, { :name => nil, :'data-stripe' => "dob_day", class: "form-control", placeholder: 'Day' } %>
    </div>

    <div class="form-group col-xs-2">
      <%= label_tag :dob_year, "Year" %>
      <%= text_field_tag :dob_year, nil, { :name => nil, :'data-stripe' => "dob_year", class: "form-control", placeholder: 'Year' } %>
    </div>

    <div class="form-group col-xs-12">
      <hr>
      <h3>Bank info</h3>
    </div>

    <div class="form-group col-xs-6">
      <%= label_tag :routing_number %>
      <%= text_field_tag :routing_number, nil, { :name => nil, :'data-stripe' => "routingNumber", class: "form-control" } %>
    </div>

    <div class="form-group col-xs-6">
      <%= label_tag :account_number %>
      <%= text_field_tag :account_number, nil, { :name => nil, :'data-stripe' => "accountNumber", class: "form-control" } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group col-xs-12">
      <hr>
      <h3>Change password</h3>
    </div>
    
    <div class="form-group col-xs-6">
      <%= f.input :password, autocomplete: "off", placeholder: "leave it blank if you don't want to change it", required: false %>
    </div>

    <div class="form-group col-xs-6">
      <%= f.input :password_confirmation, placeholder: "leave it blank if you don't want to change it", required: false %>
    </div>

    <div class="form-group col-xs-12">
      <hr>
      <h3>Save changes</h3>
    </div>

    <div class="form-group col-xs-12">
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-primary"  %>
        <%= link_to "Back", :back, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>

  <div class="form-group col-xs-12">
    <hr>
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
   </div>
</div>
