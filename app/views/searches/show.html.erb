<h1>Find an activity</h1>

      <form>
        <div class="form-group form-group-lg">
        	<%= form_tag(search_path, method: 'get') do %>
  				<div class="form-group form-group-lg">
  					<%= text_field_tag(:q, params[:q], class: "form-control") %>
  				</div>
  				<div class="form-group form-group-lg">
  					<%= submit_tag('Search', class: 'btn btn-success') %>
  				</div>
			<% end %>
          <!-- <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Search by activity"> -->
        </div>
        <!--<div class="form-group form-group-lg">
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Search by zip code">
        </div>
        <button type="submit" class="btn btn-success">Search</button>-->
      </form>
 

 <!-- TODO: Need to update the elasticsearch index for image, date formatting, and user full_name -->
<h1>Results</h1>

<div class="center">
	<div class="row">
		
	  <% @search.each do |activity| %>
	    <div class="col-md-3">
		  <div class="thumbnail">
		    <%= link_to image_tag(activity.image.url(:medium)), activity %>
			<div class="caption">
			  <h3><%= activity.name %></h3>
			  <p><%#= activity.start_date.strftime("%m/%d/%Y") %></p>
			  <p><%= number_to_currency(activity.price) %></p>
			  <p><%#= "Sold by #{activity.user.full_name}" %></p> 
			</div>
		  </div>
		</div>
	  <% end %>
	</div>
</div>